
<%= simple_form_for @wazzup, :html => { :class => 'form-horizontal' } do |f| %>

  <%= f.input :name,  required: false ,label: 'Your name!' %>
  <%= f.input :who, label: "Pls, let us know who you are.", required: false , collection: [ "Investor", "Business Owner", "Friend", "Press", "Other"] %>
  <%= f.input :email, required: false ,placeholder: 'user@domain.com' %>
  <%= f.input :body, as: :text ,required: false ,hint: 'Write your message here' %>
  <%= f.button :submit %>
<% end %>